<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    style="@style/main_layout">

   


 <com.google.ads.AdView android:id="@+id/adView"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentBottom="true"
                         ads:adUnitId="a1518640b2b6281"
                         ads:adSize="SMART_BANNER"
                         ads:loadAdOnCreate="true"/>
 
 <ScrollView android:layout_above="@id/adView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent">
     
      <LinearLayout 
     android:layout_alignParentTop="true"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:orientation="vertical">
 
 <LinearLayout 
     android:id="@+id/llWeight"
     android:layout_alignParentTop="true"
     android:layout_height="wrap_content"
     android:layout_width="fill_parent"
     android:layout_margin="10dp"
     android:orientation="vertical"
     android:background="@drawable/shape_layout"
     >




<ImageView 
    android:id="@+id/ivWtPicture1"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/image1"
    />

<TextView android:id="@+id/tvWtIndicator1"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="35kg (77lbs)"
    android:textColor="@android:color/black"/>

<SeekBar
        android:id="@+id/weight_slider1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:max="135"
        android:progress="10"
        android:background="@drawable/slider"
        android:secondaryProgress="0"
        android:progressDrawable="@drawable/seekbar_progress"
        android:thumb="@drawable/circle"
/>

<Button 
    android:id="@+id/findDosage1"
    android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Get Results"/>

</LinearLayout>
    
 
 <RelativeLayout
     android:layout_margin="10dp" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_layout"
    android:orientation="horizontal" >


   <LinearLayout
        android:id="@+id/lldosCreatine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvCreatine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollHorizontally="true"
            android:text="Creatine Dosage"
            android:textColor="#000000"
            android:textSize="20sp" />
        
        
</LinearLayout>


</RelativeLayout>

 <RelativeLayout
     android:layout_margin="10dp" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_layout"
    android:orientation="horizontal" >


   <LinearLayout
        android:id="@+id/llDosGlutamine"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvGlutamine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Glutamine Dosage"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollHorizontally="true"
            android:textColor="#000000"
            android:textSize="20sp" />
        
        
</LinearLayout>


</RelativeLayout>

 
 <RelativeLayout
     android:layout_margin="10dp" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_layout"
    android:orientation="horizontal" >


   <LinearLayout
        android:id="@+id/llDosbcaa"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvbcaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="BCAA Dosage"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollHorizontally="true"
            android:textColor="#000000"
            android:textSize="20sp" />
        
        
</LinearLayout>


</RelativeLayout>
 
    </LinearLayout>
    </ScrollView>
   

</RelativeLayout>